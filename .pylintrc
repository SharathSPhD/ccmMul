[MASTER]
ignore=CVS,.git,tests
jobs=0
persistent=yes
load-plugins=

[MESSAGES CONTROL]
disable=C0111,C0103,W0511,C0301,C0302,R0903,R0913,W0621

[FORMAT]
max-line-length=88
indent-after-paren=4

[BASIC]
good-names=i,j,k,ex,Run,_,x,y,z,e,n,df,fp,ax

[VARIABLES]
init-import=yes

[TYPECHECK]
ignored-modules=numpy,pandas,matplotlib.pyplot
generated-members=numpy.*,pandas.*

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes

[LOGGING]
logging-modules=logging

[IMPORTS]
allow-any-import-level=yes

[DESIGN]
max-args=10
max-locals=20
max-returns=6
max-branches=12
max-statements=50
max-parents=7
max-attributes=7
min-public-methods=1
max-public-methods=20